<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="OfferGridDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Dnd\Offers\Model\Resource\Offer\Collection
            </argument>
            <argument name="filterPool" xsi:type="object" shared="false">OfferGridFilterPool
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="OfferGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter
                </item>
                <item name="fulltext" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="offers_offer_listing_data_source" xsi:type="string">
                    Dnd\Offers\Model\ResourceModel\Grid\Offer\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Dnd\Offers\Model\ResourceModel\Grid\Offer\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">categories_offers</argument>
            <argument name="resourceModel" xsi:type="string">Dnd\Offers\Model\ResourceModel\Offer</argument>
        </arguments>
    </virtualType>
</config>
